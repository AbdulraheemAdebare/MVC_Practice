@model MVC_Practice.Models.Student

@* @{
    ViewData["Title"] = "Edit";
} *@

@if (Model is null){
    <p><h1>Oga, na rubbish you enter</h1></p>
}
else{
    <h1>Edit Student</h1>

<form method="post">

    <div class="mt-3">
        <label class="form-label">ID</label>
        <input type="text" class="form-control" asp-for="StudentId" readonly>
    </div>
    
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="StudentName">
    </div>

    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email">
    </div>

    <div class="mt-3">
        <label class="form-label">Age</label>
        <input type="number" class="form-control" asp-for="Age">
    </div>

    <div class="mt-3">
        <label class="form-label">State</label>
        <input type="text" class="form-control" asp-for="State">
    </div>

    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="present" asp-for="Present">
        <label class="form-check-label" for="present">Present</label>
    </div>

    <div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>

    <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Students">Delete</button>
    </div>
    
</form>
}

